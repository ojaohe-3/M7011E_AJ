{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "removeComments": true,
    "strict": true,
    "noLib": false,
    "outDir": "./build",
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}